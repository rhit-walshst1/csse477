package net.sf.jftp.gui.framework;

import java.awt.*;
import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.FocusEvent;
import java.awt.event.FocusListener;

public class HSearchBar extends JPanel {
    private JLabel label;
    private JTextField searchField;
    private JButton searchButton;

    public HSearchBar(String labelText) {
        setLayout(new BorderLayout(5, 5));

        searchField = new JTextField(""); // Set the desired width
        add("Center", searchField);

        searchButton = new JButton("S");
        searchButton.setToolTipText("Search directory");
        add("East", searchButton);

        /*
        searchButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                String searchText = searchField.getText();
                // Add your search action logic here
                System.out.println("Searching for: " + searchText);
            }
        });
        */
        
        /*searchField.addFocusListener(new FocusListener() {
            public void focusGained(FocusEvent e) {
                if (searchField.getText().equals(labelText)) {
                    searchField.setText("");
                }
            }

            public void focusLost(FocusEvent e) {
                if (searchField.getText().isEmpty()) {
                    searchField.setText(labelText);
                }
            }
        });*/

        setVisible(true);
        
        setPreferredSize(new Dimension(150, 25));
    }

    public String getLabel() {
        return label.getText();
    }

    public void setLabel(String labelText) {
        label.setText(labelText + "  ");
    }

    public String getSearchText() {
        return searchField.getText();
    }

    public void setSearchText(String searchText) {
        searchField.setText(searchText);
    }
    
    public JButton getSearchButton() {
    	return searchButton;
    }
}